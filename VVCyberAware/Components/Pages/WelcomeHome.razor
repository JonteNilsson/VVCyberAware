@page "/"
@layout Layout.NoLayout
@rendermode InteractiveServer


<div class="background-image d-flex justify-content-center flex-column align-items-center">
    <div class="w-50">
     <div class="transparent-box w-100">
        <div class="row justify-content-center align-items-center" style="height: 50vh;">
            <div class="col-md-6 text-center">
                <h1 class="display-4">Valhalla Vault</h1>
                <p class="lead">Strengthen your organization's cyber resilience with our expert-led training programs. Equip your team with the knowledge and skills to identify and respond to cyber threats effectively. Join us to transform your team into a proactive cybersecurity fortress.</p>
                <div class="mt-4">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Login">
							<span class="btn btn-success bi-person-badge-nav-menu" aria-hidden="true">Login</span>
						</NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Register">
							<span class="btn btn-info bi-person-nav-menu" aria-hidden="true">Register</span>
						</NavLink>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="position-fixed top-0 end-0">
            @if (arrowDirection == "down")
            {
                <div class="d-flex justify-content-start w-25 mt-2">
                    <div class="contributor-box" style="text-align: center;">

                        <div>
                            <h4 style="display: inline-block; margin-right: 10px; margin-left: 5px;">
                                <strong><em>Contributors</em></strong>
                            </h4>
                        </div>
                    </div>
                    <div class="arrow-box text-center" @onclick="ToggleArrowDirection">
                        <h5>▼</h5>
                    </div>
                </div>
            }
            else if (arrowDirection == "up")
            {
                <div class="d-flex justify-content-start w-25 mt-2">
                    <div class="contributor-box" style="text-align: center;">

                        <div>
                            <h4 style="display: inline-block; margin-right: 10px; margin-left: 5px;">
                                <strong><em>Contributors</em></strong>
                            </h4>
                        </div>
                        <div>
                            <a href="https://github.com/JonteNilsson"><p>Johannes</p></a>
                            <a href="https://github.com/Tobias-soderberg"><p>Tobias</p></a>
                            <a href="https://github.com/PaulineI"><p>Pauline</p></a>
                            <a href="https://github.com/Druzhee"><p>Mohannad</p></a>
                        </div>

                    </div>
                    <div class="arrow-box text-center" @onclick="ToggleArrowDirection">
                        <h5>▲</h5>
                    </div>
                </div>
            }
        </div>
    </div>
 </div>



@code{
   
    private string arrowDirection = "down";

    private void ToggleArrowDirection()
    {
        arrowDirection = (arrowDirection == "down") ? "up" : "down";
    }

    private bool IsContributorsVisible()
    {
        return arrowDirection == "up";
    }
}

